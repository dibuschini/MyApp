@{ 
    Layout = "/Views/Shared/_Layout.cshtml";
}

<h2 class="@Css.H2">Manage your account</h2>

<div>
    <h4 class="font-semibold text-lg m-2">Change your account settings</h4>
    <hr class="dark:border-gray-700" />
    <div class="flex flex-wrap">
        <div class="grow-0">
            @await Html.PartialAsync("_ManageNav")
        </div>
        <div class="grow p-4 sm:pl-16">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
